<%= form_with(model: @task, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :details %>
  <%= form.text_field :details %>

  <% if @task.persisted? %> <!-- Only show if task already exists -->
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  <% end %>

  <%= form.submit %>
<% end %>
