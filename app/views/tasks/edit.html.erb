<h1>Edit Task</h1>

<%= form_with(model: @task, method: :patch) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :details %>
  <%= f.text_area :details %><br>

  <%= f.label :completed %>
  <%= f.check_box :completed %><br>

  <%= f.submit 'Update Task' %>
<% end %>

<%= link_to 'Back to Task', task_path(@task) %>
