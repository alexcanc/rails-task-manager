<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>
  <div>
    <%= form.submit "Create Task" %>
  </div>
<% end %>

<%= link_to 'Back to Tasks List', tasks_path %>
